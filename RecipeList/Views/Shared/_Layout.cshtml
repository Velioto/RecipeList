

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RecipeList</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RecipeList.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="custom-navbar">
        <div class="navbar-left">
            <a class="navbar-brand" href="/">Home</a>
            <a href="/Recipes">My Recipes</a>
            <a href="/PublicRecipe">Public Recipes</a>
            
        </div>


        <div class="navbar-right auth-links">
            @if (User.Identity.IsAuthenticated)
            {
                <span>Welcome, @User.Identity.Name!</span>
                <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="logout-btn">Logout</button>
                </form>
            }
            else
            {
                <a href="/Identity/Account/Login">Login</a>
                <a href="/Identity/Account/Register">Register</a>
            }
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - RecipeList - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@{
    ViewData["Title"] = "Home";
    var isLoggedIn = User.Identity.IsAuthenticated;
}
<div class="home-container">
    <div class="hero-box">
        <h1>Welcome to RecipeList! 🥗</h1>
        <p class="lead">Discover, share, and save your favorite recipes in one place.</p>

        @if (!isLoggedIn)
        {
            <p class="action-text">Start your cooking journey by joining our community:</p>
            <a class="btn primary-btn" href="/Identity/Account/Register">Register</a>
            <a class="btn secondary-btn" href="/Identity/Account/Login">Login</a>
        }
        else
        {
            <p class="action-text">Welcome back, <strong>@User.Identity.Name</strong>! What would you like to do today?</p>
            <a class="btn primary-btn" href="/Recipes">My Recipes</a>
            <a class="btn secondary-btn" href="/PublicRecipe">Explore Public Recipes</a>
        }
    </div>

</div>

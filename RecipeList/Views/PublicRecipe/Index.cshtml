@model IEnumerable<RecipeList.Models.PublicRecipe>

@{
    ViewData["Title"] = "Public Recipe List";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Public Recipes</h1>
    <a href="/Recipes/Create" class="btn btn-success">+ Create New Recipe</a>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <h5>
                        <a asp-action="Details" asp-route-id="@item.ID" class="text-decoration-none text-black">
                            @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    </h5>
                    <div class="mt-3">
                        @if (item.Picture != null)
                        {
                            <img src="@item.Picture.PicturePath" alt="Recipe Image" class="img-fluid rounded" />
                        }
                        else
                        {
                            <div class="text-muted">No Image</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
